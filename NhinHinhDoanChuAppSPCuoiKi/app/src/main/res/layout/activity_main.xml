<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="188dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="106dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <View
        android:id="@+id/btnChoi"
        android:layout_width="190dp"
        android:layout_height="83dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/nutplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="spread"></View>

    <View
        android:id="@+id/btnThoat"
        android:layout_width="190dp"
        android:layout_height="83dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/vienvang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLuatChoi"
        app:layout_constraintVertical_chainStyle="spread">

    </View>

    <View
        android:id="@+id/btnLuatChoi"
        android:layout_width="190dp"
        android:layout_height="83dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/vienblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoi"
        app:layout_constraintVertical_chainStyle="spread">
    </View>

    <View
        android:id="@+id/battieng"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/battieng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/tattieng"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tattieng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/battieng" />

    <View
        android:id="@+id/thongtin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/thongtin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tattieng"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUẬT CHƠI"
        android:fontFamily="@font/luckiestguy"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnLuatChoi"
        app:layout_constraintEnd_toEndOf="@+id/btnLuatChoi"
        app:layout_constraintStart_toStartOf="@+id/btnLuatChoi"
        app:layout_constraintTop_toTopOf="@+id/btnLuatChoi" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:textStyle="bold"
        android:fontFamily="@font/luckiestguy"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnThoat"
        app:layout_constraintEnd_toEndOf="@+id/btnThoat"
        app:layout_constraintStart_toStartOf="@+id/btnThoat"
        app:layout_constraintTop_toTopOf="@+id/btnThoat" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHƠI"
        android:textStyle="bold"
        android:fontFamily="@font/luckiestguy"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnChoi"
        app:layout_constraintEnd_toEndOf="@+id/btnChoi"
        app:layout_constraintStart_toStartOf="@+id/btnChoi"
        app:layout_constraintTop_toTopOf="@+id/btnChoi" />
</androidx.constraintlayout.widget.ConstraintLayout>