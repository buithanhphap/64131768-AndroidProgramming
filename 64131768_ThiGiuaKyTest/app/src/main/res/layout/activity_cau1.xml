<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent"
    tools:context=".Cau1Activity">

    <TextView
        android:id="@+id/tvSoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="172dp"
        android:text="Số a"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSob"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:text="Số b"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSoa" />

    <EditText
        android:id="@+id/edtSoa"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="80dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toEndOf="@+id/tvSoa"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtSob"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="81dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/tvSob"
        app:layout_constraintTop_toBottomOf="@+id/edtSoa"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnTinhTong"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="118dp"
        android:text="Tính tổng a+b"
        android:textSize="23dp"
        android:backgroundTint="@color/yellow"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:cornerRadius = "10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSob" />

    <TextView
        android:id="@+id/tvKQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="Kết quả"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTinhTong" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="227dp"
        android:background="@color/white"
        android:text=""
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvKQ"
        app:layout_constraintTop_toBottomOf="@+id/btnTinhTong" />
</androidx.constraintlayout.widget.ConstraintLayout>